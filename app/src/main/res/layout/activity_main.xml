<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="myName" type="com.example.android.diceroller.MyName"/>
    </data>

    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:layout_marginTop="@dimen/top_margin_layout" android:paddingStart="@dimen/padding_16"
        android:paddingEnd="@dimen/padding_16">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/name_text" android:text="@={myName.name}"
            android:textAlignment="center" style="@style/name_style" android:fontFamily="@font/roboto"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nickname_edit" style="@style/name_style" android:hint="@string/what_is_your_name"
            android:textAlignment="center"/>
    <Button
            android:text="@string/Done_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/done_button"
            android:layout_gravity="center_horizontal"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/nickname_text"
            android:textAlignment="center" style="@style/name_style" android:fontFamily="@font/roboto"
            tools:visibility="gone"
    android:text="@={myName.nickName}"
    />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageView" android:contentDescription="@string/yellow_star"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/bio_text" android:text="@string/bio"
                android:lineSpacingExtra="2.dp" style="@style/name_style"/>
    </ScrollView>

</LinearLayout>
</layout>